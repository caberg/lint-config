{
  "name": "linting",
  "version": "0.1.1",
  "description": "Linting presets for Intracto internal code",
  "main": "bin/index.js",
  "bin": {
    "linting": "bin/index.js"
  },
  "author": "Intracto",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "chalk": "3.0.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "prettier": "1.19.1",
    "readline": "1.3.0",
    "stylelint": "11.1.1",
    "stylelint-config-prettier": "6.0.0",
    "stylelint-prettier": "1.1.1",
    "typescript": "3.7.2"
  },
  "scripts": {
    "eslint:lint:js": "eslint '**/*.js' --config ./js/index.js",
    "eslint:fix:js": "eslint --fix '**/*.js' --config ./js/index.js",
    "eslint:lint:ts": "eslint '**/*.ts' --config ./ts/index.js",
    "eslint:fix:ts": "eslint --fix '**/*.ts' --config ./ts/index.js",
    "stylelint:lint": "stylelint '**/*.scss'",
    "stylelint:fix": "stylelint --fix '**/*.scss'",
    "prettier:lint": "prettier --check '**/*.{js,scss,ts}'",
    "prettier:fix": "prettier --write '**/*.{js,scss,ts}'"
  }
}
